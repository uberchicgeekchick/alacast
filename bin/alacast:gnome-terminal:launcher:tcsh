#!/bin/tcsh -f

set alacasts_path = `dirname "${0}"`
set alacasts_exec = "${alacasts_path}/alacast.php"
if(!($?ALACAST_OPTIONS})) setenv ALACAST_OPTIONS="--update=detailed --logging --interactive --titles-append-pubdate --strip-characters='#!'"


set alacasts_resolution = "";
if ( -e "${HOME}/.alacast/cli.geometry" ) then
	set alacasts_resolution = `cat "${HOME}/.alacast/cli.geometry"`
else if ( -e "${alacasts_path}/../resolutions/cli" ) then
	set alacasts_resolution = `cat "${alacasts_path}/../resolutions/cli"`
else
	set alacasts_resolution = "114x40"
endif

/usr/bin/gnome-terminal \
	--geometry="${alacasts_resolution}" \
	--hide-menubar \
	--title="alacast:cli" \
	--working-directory="${alacasts_path}" \
	--command="${alacasts_exec} ${argv}" \
&;
