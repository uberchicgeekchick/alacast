#!/bin/tcsh -f

set alacasts_path="`dirname '${0}'`";
cd "${alacasts_path}";
set alacasts_path="${cwd}";
set alacasts_exec="${alacasts_path}/alacast.php";
if(! -x ${alacasts_exec} ) then
	printf "Unable to find alacast.php or its not exectuable.\n\tAttempting to run: %s" "${alacasts_exec}";
	exit -1;
endif

if(!(${?ALACAST_OPTIONS})) setenv ALACAST_OPTIONS '--logging --titles-append-pubdate --strip-characters=#;! --update=detailed --interactive';


set alacasts_resolution = "";
if ( -e "${HOME}/.alacast/alacast.ini" ) then
	set alacasts_config="${HOME}/.alacast/alacast.ini";
else if( -e "${HOME}/.alacast/profiles/${USER}/alacast.ini" ) then
	set alacasts_config="${HOME}/.alacast/profiles/${USER}/alacast.ini";
else if ( -e "${alacasts_path}/../data/${USER}/default/alacast.ini" ) then
	set alacasts_config="${alacasts_path}/../data/profiles/${USER}/alacast.ini";
else if ( -e "${alacasts_path}/../data/profiles/default/alacast.ini" ) then
	set alacasts_config="${alacasts_path}/../data/profiles/default/alacast.ini";
endif

if( ${?alacasts_config} ) then
	set alacasts_resolution=`cat "${alacasts_config}" | grep 'resolutions.gnome-terminal' | sed 's/.*resolutions\.gnome\-terminal="\([^"]\+\)";/\1/'`;
	set alacasts_options=`cat "${alacasts_config}" | grep 'options.cli' | sed 's/.*options\.cli="\([^"]\+\)";/\1/'`;
else
	set alacasts_resolution="140x40";
	set alacasts_options="--with-defaults";
endif

/usr/bin/gnome-terminal							\
	--geometry="${alacasts_resolution}"				\
	--hide-menubar							\
	--role='Media:Alacast'						\
	--title="alacast:php"						\
	--working-directory="${alacasts_path}"				\
	--command="${alacasts_exec} ${alacasts_options} ${argv}" &;
